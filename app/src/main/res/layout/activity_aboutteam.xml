<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/liist"
    tools:context=".aboutteam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_margin="100dp"
            android:elevation="6dp"
            android:layout_gravity="center"
            >

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="16dp">


                <TextView
                    android:id="@+id/directorhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Directed By"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:id="@+id/directorimage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/faacharyaji"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/directorname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:text="Aacharya Yogesh Kumar Kaushik"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/directortitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Director"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <ImageButton
                    android:id="@+id/acharyalnk"
                    android:layout_width="120dp"


                    android:layout_height="wrap_content"
                    android:background="@drawable/img_1" />

            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="-70dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"

            android:elevation="6dp"
            android:layout_gravity="center"
            >

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="16dp">


                <TextView
                    android:id="@+id/atulhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Headed By"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:textAlignment="center"
                    android:id="@+id/atulimage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/fatuldev" />

                <TextView
                    android:id="@+id/atulname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:text="Mr. Atul Dev Arora"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/atultitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Founder and Managing Director"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <ImageButton
                    android:id="@+id/atuldevlnk"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_1" />
            </LinearLayout>




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"

            android:elevation="6dp"
            android:layout_gravity="center"
            >

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="16dp">


                <TextView
                    android:id="@+id/apoorvahead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Developed By"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:textAlignment="center"
                    android:id="@+id/apoorvaimage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/apoorva" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Ms.Apoorva Garg"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/aoorvatitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Android Developer"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_1"
                    android:id="@+id/apoorvalnk"
                    />
            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"

            android:elevation="6dp"
            android:layout_gravity="center"
            >

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="16dp">


                <TextView
                    android:id="@+id/durjoyhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Design By"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:textAlignment="center"
                    android:id="@+id/durjoyimage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/durjoy" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Mr.Durjoy Barua"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="UI/UX Designer"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_1"
                    android:id="@+id/durjoylnk"
                    />
            </LinearLayout>




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"

            android:elevation="6dp"
            android:layout_gravity="center"
            >

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="16dp">


                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Developed By"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:textAlignment="center"
                    android:id="@+id/shivamimage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/shivam" />

                <TextView
                    android:id="@+id/shivamname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Mr.Shivam KumarSingh"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shivamtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Android Developer"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_1"
                    android:id="@+id/shivamlnk"
                    />
            </LinearLayout>




        </androidx.cardview.widget.CardView>




    </LinearLayout>
</ScrollView>