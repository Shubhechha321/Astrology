<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:gravity="center"
    tools:context=".Activities.bookingPage">

    <LinearLayout
        android:id="@+id/cly1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hindiname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="आदि शक्ति एस्ट्रो"
                    android:textColor="#D100D1"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/englishname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="AADI SHAKTII ASTRO"
                    android:textColor="#D100D1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"

                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="🌷 ✍🏻 Booking Appointment ✍🏻 🔮"
                    android:textColor="#4F3DEF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <ImageView
                android:id="@+id/topicon"
                android:layout_width="58dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"


                android:src="@drawable/mainlogo"
                android:text="AADISHAKTI" />
        </RelativeLayout>


        <TextView
            android:id="@+id/NAmeofExpert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/textviewbg"

            android:backgroundTint="#F6F7FA"
            android:hint="Name:"
            android:padding="10dp"
            android:textColor="#4F3DEF"
            android:textSize="16dp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/experiencebig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textviewbg"
            android:backgroundTint="#F6F7FA"
            android:hint="Experience"
            android:padding="10dp"
            android:textColor="#4F3DEF"
            android:textSize="16dp"

            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="68dp" />


        <TextView
            android:id="@+id/aboutme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textviewbg"
            android:backgroundTint="#F6F7FA"
            android:hint="About me"
            android:padding="10dp"
            android:textColor="#4F3DEF"
            android:textSize="16dp"

            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="68dp" />

        <TextView
            android:id="@+id/allselections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textviewbg"
            android:backgroundTint="#F6F7FA"

            android:hint="Selections"
            android:padding="10dp"
            android:textColor="#4F3DEF"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="97dp" />


        <TextView
            android:id="@+id/ratepmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textviewbg"
            android:backgroundTint="#F6F7FA"
            android:hint="Rate"
            android:padding="10dp"
            android:textColor="#4F3DEF"
            android:textSize="16dp"

            />


        <TextView
            android:id="@+id/pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/box"
            android:backgroundTint="#FDF8F2"

            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text=" 🕒  Please Pick Time &amp; Date  📅 "
            android:textColor="#4F3DEF"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/pickduratiion"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/box"
                android:fontFamily="@font/aclonica"
                android:singleLine="true"
                android:text="Duration ⏱️"

                android:textAllCaps="false"
                android:textStyle="bold"
                app:backgroundTint="#4DBFF0"
                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="553dp" />

            <EditText
                android:id="@+id/duraOfBook"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#F6F7FA"
                android:ems="8"
                android:hint="Duration "
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#4F3DEF"

                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Total amount to be Paid:"
                android:textColor="#4F3DEF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalAmountToBePaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="#4F3DEF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/box"


            android:fontFamily="@font/aclonica"
            android:text="Pay To Request"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:textStyle="bold"
            app:backgroundTint="#4DBFF0"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="553dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/cly2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/cong" />

        <TextView
            android:id="@+id/showstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="5dp"
            android:text="Show status"

            android:textColor="#4F3DEF"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/box"
            android:fontFamily="@font/aclonica"
            android:padding="5dp"
            android:text="Pay To Proceed"
            android:visibility="visible"
            app:backgroundTint="#4DBFF0"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="393dp" />

        <Button
            android:id="@+id/newBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/box"
            android:fontFamily="@font/aclonica"
            android:padding="5dp"
            android:text="Please Book Again"
            android:visibility="invisible"
            app:backgroundTint="#4DBFF0" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="Phone Number"


            android:textColor="#4F3DEF"
            android:textSize="18dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/chat"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/box"
            android:fontFamily="@font/aclonica"
            android:singleLine="true"
            android:text="Chat With Your Expert: 👉"

            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold"
            app:backgroundTint="#4DBFF0" />


    </LinearLayout>

</RelativeLayout>
