<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.bookingPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="#4DBFF0"
            android:gravity="center"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageView
                android:id="@+id/topicon"
                android:layout_width="58dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:src="@drawable/mainlogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="AADI SHAKTII ASTRO"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:title="AADI SHAKTII ASTRO"
                app:titleMarginStart="10dp"
                app:titleTextColor="@color/white" />

            <ImageButton
                android:id="@+id/openProfile"

                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:background="#4DBFF0"
                android:src="@drawable/ic_baseline_person_pin_24"
                app:layout_constraintEnd_toEndOf="parent"

                />
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/cly1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:src="@drawable/profilee"></ImageView>
                <TextView
                    android:id="@+id/NAmeofExpert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"

                    android:backgroundTint="#F6F7FA"
                    android:hint="Name:"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />

                    <TextView
                        android:id="@+id/experiencebig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:backgroundTint="#F6F7FA"
                        android:hint="Experience"
                        android:padding="14dp"
                        android:textColor="@color/black"
                        android:textSize="12dp"

                        tools:layout_editor_absoluteX="126dp"
                        tools:layout_editor_absoluteY="68dp" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Expert"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/alata"
                        android:textSize="@dimen/_14sdp"
                        ></TextView>


                    <TextView
                        android:id="@+id/aboutme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:hint="About me"

                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"

                        tools:layout_editor_absoluteX="126dp"
                        tools:layout_editor_absoluteY="68dp" />



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/allselections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box"
                    android:fontFamily="@font/alata"
                    android:backgroundTint="#F6F7FA"
                    android:ems="9"

                    android:hint="Selections"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="126dp"
                    tools:layout_editor_absoluteY="97dp" />


                <TextView
                    android:id="@+id/ratepmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/textviewbg"
                    android:backgroundTint="#F6F7FA"
                    android:fontFamily="@font/alata"
                    android:hint="Rate/Minute"
                    android:ems="9"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">


                <Button
                    android:id="@+id/pickduratiion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box"
                    android:fontFamily="@font/alata"
                    android:singleLine="true"
                    android:text="Time Slot(In Minutes)"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:backgroundTint="#4DBFF0"
                    tools:layout_editor_absoluteX="160dp"
                    tools:layout_editor_absoluteY="553dp" />

                <EditText
                    android:id="@+id/duraOfBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/textviewbg"
                    android:backgroundTint="#F2F2F4"
                    android:ems="8"
                    android:hint="Duration "
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="#4F3DEF"

                    android:textSize="16dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingRight="10dp"
                    android:text="Total amount to be Paid:"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/totalAmountToBePaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="TextView"
                    android:textColor="#4F3DEF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"

                    android:layout_marginEnd="80dp"
                    android:background="@drawable/box"
                    android:fontFamily="@font/alata"

                    android:text="Book Now"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    app:backgroundTint="#4DBFF0"

                    tools:layout_editor_absoluteX="160dp"
                    tools:layout_editor_absoluteY="553dp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cly2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/cong" />

            <TextView
                android:id="@+id/showstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Show status"

                android:textColor="#4F3DEF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/box"
                android:fontFamily="@font/aclonica"
                android:padding="5dp"
                android:text="Pay To Proceed"
                android:visibility="visible"
                app:backgroundTint="#4DBFF0"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="393dp" />

            <Button
                android:id="@+id/newBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/box"
                android:fontFamily="@font/aclonica"
                android:padding="5dp"
                android:text="Please Book Again"
                android:visibility="invisible"
                app:backgroundTint="#4DBFF0" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="Phone Number"


                android:textColor="#4F3DEF"
                android:textSize="18dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/chat"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/box"
                android:fontFamily="@font/aclonica"
                android:singleLine="true"
                android:text="Chat With Your Expert: 👉"

                android:textAllCaps="false"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#4DBFF0" />


        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>

</ScrollView>
