<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.bookingPage">

    <EditText
        android:id="@+id/dateOfBooking"
        android:layout_width="151dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Date of Booking"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/durationOfbooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="234dp" />

    <EditText
        android:id="@+id/duraOfBook"
        android:layout_width="153dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="duration "
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="224dp" />

    <EditText
        android:id="@+id/timeOfBooking"
        android:layout_width="148dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="time of booking"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hrs"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/totalAmountToBePaid"
        android:layout_width="79dp"
        android:layout_height="38dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="430dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total amount to be Paid"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="441dp" />

    <Button
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="553dp" />

    <TextView
        android:id="@+id/NAmeofExpert"
        android:layout_width="95dp"
        android:layout_height="29dp"
        android:text="name"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/experiencebig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="experience"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="68dp" />

    <TextView
        android:id="@+id/ratepmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rate"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="126dp" />

    <TextView
        android:id="@+id/allselections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="selections"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="97dp" />

</androidx.constraintlayout.widget.ConstraintLayout>