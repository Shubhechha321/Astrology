<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    tools:context=".Activities.bookingPage">

    <LinearLayout
        android:id="@+id/cly1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hindiname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/aclonica"
                    android:textColor="#D100D1"
                    android:gravity="center"
                    android:text="आदि शक्ति एस्ट्रो"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/englishname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:text="AADI SHAKTII ASTRO"
                    android:fontFamily="@font/aclonica"
                    android:textColor="#D100D1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"

                    android:gravity="center"
                    android:text="🌷 ✍🏻 Booking Appointment ✍🏻 🔮"
                    android:fontFamily="@font/aclonica"
                    android:textColor="#4F3DEF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <ImageView
                android:id="@+id/topicon"
                android:layout_width="58dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"


                android:src="@drawable/mainlogo"
                android:text="AADISHAKTI" />
        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="248dp">

            <TextView
                android:id="@+id/NAmeofExpert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:hint="Name:"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#F6F7FA"
                android:padding="2dp"
                android:textColor="#4F3DEF"
                android:textStyle="bold"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="248dp">

            <TextView
                android:id="@+id/experiencebig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Experience"
                android:textColor="#4F3DEF"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#F6F7FA"
                android:textSize="16dp"
                android:padding="2dp"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="68dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="248dp">

            <TextView
                android:id="@+id/allselections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selections"
                android:padding="2dp"
                android:textColor="#4F3DEF"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#F6F7FA"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="97dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="248dp">


            <TextView
                android:id="@+id/ratepmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rate"
                android:textColor="#4F3DEF"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#F6F7FA"
                android:textSize="16dp"
                android:padding="2dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/picktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Time"
                android:layout_weight="0.2"
                android:layout_marginStart="5dp"

                android:textAllCaps="false"
                android:background="@drawable/box"
                app:backgroundTint="#4DBFF0"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="553dp"  />



            <EditText
                android:id="@+id/timeOfBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:textSize="16dp"
                android:textColor="#4F3DEF"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:hint="Time of Booking"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/pickdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:layout_marginStart="5dp"
                android:background="@drawable/box"
                android:fontFamily="@font/aclonica"
                android:text="Pick Date"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:backgroundTint="#4DBFF0"
                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="553dp" />

            <EditText
                android:id="@+id/dateOfBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="8"
                android:textSize="16dp"
                android:gravity="center"
                android:hint="Date of Booking"
                android:inputType="textPersonName"
                android:textColor="#4F3DEF" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/pickduratiion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Duration"
                android:textAllCaps="false"
                android:singleLine="true"
                android:background="@drawable/box"
                app:backgroundTint="#4DBFF0"
                android:textStyle="bold"
                android:layout_weight="0.2"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/aclonica"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="553dp"
                />

            <EditText
                android:id="@+id/duraOfBook"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="8"
                android:padding="10dp"
                android:textSize="16dp"
                android:hint="Duration "
                android:textColor="#4F3DEF"

                android:inputType="textPersonName"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="hour"
                android:padding="5dp"
                android:textColor="#4F3DEF"
                tools:layout_editor_absoluteX="340dp"
                tools:layout_editor_absoluteY="239dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#4F3DEF"
                android:text="Total amount to be Paid:" />

            <TextView
                android:id="@+id/totalAmountToBePaid"
                android:layout_width="79dp"
                android:layout_height="38dp"
                android:padding="10dp"
                android:text="TextView" />

        </LinearLayout>


        <Button
            android:id="@+id/request"
            android:text="Request"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/box"
            android:fontFamily="@font/aclonica"

            android:textAllCaps="false"
            android:textSize="17dp"
            android:textStyle="bold"
            app:backgroundTint="#4DBFF0"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="553dp" />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/cly2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="171dp"
            android:layout_height="171dp"
            app:srcCompat="@drawable/cong" />

        <TextView
            android:id="@+id/showstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4F3DEF"
            android:textSize="18dp"
            android:layout_marginTop="15dp"

            android:fontFamily="@font/aclonica"
            android:textStyle="bold"
            android:text="show status" />

        <Button
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay To Proceed"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="393dp" />

        <Button
            android:id="@+id/newBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:text="Please Book Again"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4F3DEF"
            android:textSize="18dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"

            android:fontFamily="@font/aclonica"
            android:textStyle="bold"
            android:text="Phone Number"
             />


        <Button
            android:id="@+id/chat"

            android:text="👉 Chat With Your Expert: 👉"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/box"
            android:fontFamily="@font/aclonica"

            android:textAllCaps="false"
            android:textSize="17dp"
            android:textStyle="bold"
            app:backgroundTint="#4DBFF0" />


    </LinearLayout>

</RelativeLayout>
