<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundd"
    android:layout_height="match_parent"
    tools:context=".vastuExpertBookingPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hindiname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:text="AADI SHAKTII ASTRO"
                    android:textColor="#D100D1"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:text="Welcome To Vastu Sashtra"
                    android:textColor="#D100D1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:text="────────────────────────────"

                    android:textColor="#D100D1"

                    android:textSize="18sp"
                    />






            </LinearLayout>


            <ImageView
                android:id="@+id/topicon"
                android:layout_width="58dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/mainlogo" />


        </RelativeLayout>





        <ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:src="@drawable/housevastu"></ImageView>

        <TextView
            android:id="@+id/englishname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"

            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:text="Please Enter Your Property Details:"
            android:textColor="#25BEF7"
            android:textSize="20sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/areaofproperty"
        android:background="@drawable/textviewbg"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:layout_marginBottom="8dp"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="553dp"

        android:backgroundTint="#F6F7FA"
        android:hint="Total Area of Property(in square feet)"
        app:layout_constraintTop_toBottomOf="@+id/veallselections"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalfloors"
        android:hint="Total Floors"
        android:background="@drawable/textviewbg"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:textSize="18dp"
        android:layout_marginBottom="8dp"

        android:backgroundTint="#F6F7FA"
        app:layout_constraintTop_toBottomOf="@+id/areaofproperty"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="553dp"  />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalrooms"
        android:background="@drawable/textviewbg"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:textSize="18dp"
        android:backgroundTint="#F6F7FA"
        android:layout_marginBottom="8dp"
        android:hint="Total Rooms"
        app:layout_constraintTop_toBottomOf="@+id/totalfloors"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kitchendine"
        android:background="@drawable/textviewbg"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:textSize="18dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#F6F7FA"
        android:hint="Total Kitchen,Dine and Dinning"
        app:layout_constraintTop_toBottomOf="@+id/totalrooms"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/washrooms"
        android:hint="Total Washrooms"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textviewbg"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:textSize="18dp"
        android:backgroundTint="#F6F7FA"
        app:layout_constraintTop_toBottomOf="@+id/kitchendine"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/basement"
        android:hint="Basement(If there is)"
        android:background="@drawable/textviewbg"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:textSize="18dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#F6F7FA"
        app:layout_constraintTop_toBottomOf="@+id/washrooms"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:hint="Address (with Pincode)"
        android:background="@drawable/textviewbg"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:textSize="18dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#F6F7FA"
        app:layout_constraintTop_toBottomOf="@+id/basement"
        tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#F6F7FA"
                android:hint="remarks"
                android:padding="4dp"
                android:paddingStart="5dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/address"
                tools:layout_editor_absoluteX="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/totalamountinvastu"
                android:hint="Total Amount"
                android:paddingStart="5dp"
                android:textSize="18dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/textviewbg"
                android:padding="4dp"
                android:backgroundTint="#F6F7FA"
                app:layout_constraintTop_toBottomOf="@+id/address"
                tools:layout_editor_absoluteX="16dp" />



            <Button
                android:id="@+id/verequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"

                android:layout_marginEnd="40dp"
                android:background="@drawable/box"
                app:backgroundTint="#4DBFF0"

                android:fontFamily="@font/open_sans_bold"
                android:text="Book Now"
                android:textAllCaps="false"
                android:textSize="16dp"

                android:textStyle="bold"

                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="553dp" />


        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>
</ScrollView>